<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Projeto_Integrador.Pages.Registros"
             Title="Registros"
             NavigationPage.HasNavigationBar="False">
    
    <VerticalStackLayout>
        <Label 
            Margin="15"
            Text="Todos os seus registros: "
            FontSize="27"
            WidthRequest="400"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ScrollView>
            <Label x:Name="lblRegistros" FontSize="16" TextColor="White"/>
        </ScrollView>

        <Button Text="Voltar"
                Clicked="BtnVoltar"
                WidthRequest="230"/>

    </VerticalStackLayout>
</ContentPage>